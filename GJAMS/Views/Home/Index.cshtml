                    Railway RRB Technician CEN
                    <p>Apply Online</p>
                </a>
            </div>
        </div>
    </div>
    <!-- Latest Jobs Section  -->
    <div class="latest-job" id="job" data-aos="fade-up" data-aos-duration="500">
        <h1>Latest Govt Jobs</h1>
        <div class="container" data-aos="fade-up" data-aos-duration="500">
            @foreach (var data in Model.Table_2)
                {
            <a asp-action="JobDetail" asp-route-id="@data.id" >
                    <div class="job">
                    <div class="col1">@data.name_of_post</div>
                    <div class="col2">
                            <p><i class="fa-regular fa-clock"></i> @data.post_date</p>
                        <p><i class="fa-solid fa-circle-user"></i> @data.total_post Posts</p>
                    </div>
                </div>
            </a> 
                }          
        </div>
        <a asp-action="LatestJob" class="btn">See All Jobs</a>
    </div>
    <!-- Admit Card Section  -->
    <div class="admit-card latest-job" id="admit-card" data-aos="fade-up" data-aos-duration="500">
        <h1>Admit Cards</h1>
        <div class="container" data-aos="fade-up" data-aos-duration="500">
         @foreach (var data in Model.AdmitCard)
                {
                <a asp-action="AdmiCardDetail" asp-route-id="@data.id">
                <div class="job">
                    <div class="col1">@data.name_of_post</div>
                    <div class="col2">
                        <p><i class="fa-regular fa-clock"></i> @data.post_date</p>
                        <p><i class="fa-solid fa-circle-user"></i> @data.total_post Posts</p>
                    </div>
                </div>
            </a>
                }
           
        </div>
        <a asp-action="AdmitCard" class="btn2">See All Admit Cards</a>
    </div>
    <!-- Result Section  -->
    <div class="result" id="result" data-aos="fade-up" data-aos-duration="500">
        <h1>Results</h1>
        <div class="card-wrp" data-aos="fade-up" data-aos-duration="500">
             @foreach (var results in Model.Result)
            {
                <a asp-action="ResultDetail" asp-route-id="@results.id">
                <div class="crd1">
                    <div class="col1">@results.name_of_post</div>
                    <div class="col2">
                        <p><i class="fa-regular fa-clock"></i> @results.post_date</p>
                        <p><i class="fa-solid fa-circle-user"></i> @results.total_post Posts</p>
                    </div>
                </div>
            </a>
                }
        </div>
        <a asp-action="Result" class="btn3">See All Results</a>
    </div>
    <!-- Footer Section  -->
    <footer>
        <div class="col1">
            <h1>GovtPath</h1>
            <p>Looking for your next career opportunity. Look no further</p>
            <div class="f-menu">
                <a asp-action="Index">Home</a>
                <a asp-action="AboutUs">About Us</a>
                <a asp-action="LatestJob">Latest Job</a>
                <a asp-action="Result">Result</a>
            </div>
        </div>
        <div class="col1">
            <h1>Subscribe To Get Our <br> Newsletter</h1>
            <p>Looking for your next career opportunity. Look no further</p>
        </div>
        <div class="col3">
            <div class="row1">
                <input type="email" placeholder="Enter Your Email">
                <button type="submit">Subscribe</button>
            </div>
            <div class="row2">
                <i class="fa-brands fa-twitter"></i>
                <i class="fa-brands fa-facebook"></i>
                <i class="fa-brands fa-youtube"></i>
                <i class="fa-brands fa-instagram"></i>
                <i class="fa-brands fa-threads"></i>
                <i class="fa-brands fa-telegram"></i>
                <i class="fa-brands fa-google-play"></i>
                <i class="fa-brands fa-app-store-ios"></i>
            </div>
        </div>
    </footer>
    <!-- Bottom Footer  -->
    <div class="b-footer">
        <p>
            © 2024 GovtPath. All rights reserved. | Designed By <a asp-action="AdminLogin" target="_blank">
                Suresh
                Kumar
            </a>
        </p>
    </div>
    <!-- JS File  -->
 <script>
        // Prevent going back to the login page after logout
        window.history.pushState(null, '', window.location.href);
        window.onpopstate = function () {
            window.history.pushState(null, '', window.location.href);
        };
    </script>
    <script src="~/js/script.js"></script>
    <!-- AOS JS CDN  -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init();
    </script>
</body>

</html>